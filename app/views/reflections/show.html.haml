%p#notice= notice

%article
  %h3= @reflection.title
  %ul.info
    %li= @reflection.reaction
    %li= @reflection.week
  %figure
    = image_tag(@reflection.photo, {alt: 'A photo belongs here.'})
  %ul.controls
    %li= link_to 'Edit', edit_reflection_path(@reflection)
    %li= link_to 'Destroy', @reflection, method: :delete, data: { confirm: 'Are you sure?' }

%footer
  = link_to 'Back', reflections_path
